{
  "name": "chillka-backend",
  "version": "0.0.1",
  "description": "This is Chillka backend server",
  "license": "MIT",
  "main": "dist/app.js",
  "repository": "https://github.com/ChillKa/chillka-backend.git",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.18.0 <=18.18.2"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "schema": "node src/swagger/schemaGenerator.js",
    "spec": "ts-node src/swagger/swagger.ts",
    "swagger": "yarn schema && yarn spec",
    "start": "node dist/app.js",
    "build": "yarn schema && tsc",
    "dev": "nodemon src/app.ts",
    "format": "prettier . --write"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json, md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./.commitlintrc.cjs"
    }
  },
  "dependencies": {
    "@emailjs/nodejs": "^2.2.0",
    "@faker-js/faker": "^8.4.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.2.0",
    "dotenv": "^16.4.5",
    "ecpay_aio_nodejs": "^1.2.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.7.5",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.0",
    "typescript-json-schema": "^0.63.0",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@eslint/eslintrc": "^3.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
