{
  "name": "chillka-backend",
  "version": "0.0.1",
  "description": "This is Chillka backend server",
  "license": "MIT",
  "main": "dist/app.js",
  "repository": "https://github.com/ChillKa/chillka-backend.git",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.18.0 <=18.18.2"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "start": "node dist/src/app.js",
    "build": "swc src -d dist --source-maps",
    "dev": "nodemon --watch src --ext ts --exec \"yarn build && yarn start\""
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongodb": "^6.5.0",
    "mongoose": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@eslint/eslintrc": "^3.0.2",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.0",
    "@swc/register": "^0.1.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
